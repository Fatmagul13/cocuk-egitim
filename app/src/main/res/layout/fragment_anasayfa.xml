<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fatmagulyurtseven.cocukegitim.Fragment.AnasayfaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bu">

        <ImageButton
            android:id="@+id/imgButonSayilar"
            android:layout_width="150dp"
            android:layout_height="85dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="22dp"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/one" />

        <ImageButton
            android:id="@+id/imgButonHarfler"
            android:layout_width="150dp"
            android:layout_height="85dp"

            android:layout_above="@+id/textView2"
            android:layout_alignStart="@+id/imgButonMevsimler"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/harfler" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imgButonSayilar"
            android:layout_below="@+id/imgButonSayilar"
            android:layout_marginEnd="37dp"
            android:text="SAYILAR"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imgButonHarfler"
            android:layout_below="@+id/imgButonSayilar"
            android:layout_marginStart="35dp"
            android:text="HARFLER"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imgButonRenkler"
            android:layout_width="150dp"
            android:layout_height="85dp"
            android:layout_alignStart="@+id/imgButonHarfler"
            android:layout_alignTop="@+id/imgButonHayvanlar"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/renkler" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignStart="@+id/textView5"
            android:layout_centerVertical="true"
            android:text="HAYVANLAR"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignStart="@+id/textView2"
            android:text="RENKLER"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imgButonMeyveler"
            android:layout_width="150dp"
            android:layout_height="85dp"
            android:layout_alignStart="@+id/imgButonSayilar"
            android:layout_below="@+id/textView3"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/meyveler" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView"
            android:layout_below="@+id/imgButonMeyveler"
            android:text="MEYVELER"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imgButonMevsimler"
            android:layout_width="150dp"
            android:layout_height="85dp"
            android:layout_above="@+id/textView6"
            android:layout_alignStart="@+id/imgButonMeslek"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/calendar" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignEnd="@+id/textView4"
            android:text="MEVSİMLER"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imgButonMatematik"
            android:layout_width="150dp"
            android:layout_height="85dp"
            android:layout_above="@+id/textView7"
            android:layout_alignStart="@+id/imgButonMeyveler"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/matematik" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginBottom="12dp"
            android:text="MATEMATİK"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imgButonMeslek"
            android:layout_width="150dp"
            android:layout_height="85dp"
            android:layout_above="@+id/textView8"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/doctor" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignEnd="@+id/textView4"
            android:text="MESLEKLER"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imgButonHayvanlar"
            android:layout_width="150dp"
            android:layout_height="85dp"


            android:layout_above="@+id/textView3"
            android:layout_alignStart="@+id/imgButonMeyveler"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/hayvanlar" />
    </RelativeLayout>

</FrameLayout>
